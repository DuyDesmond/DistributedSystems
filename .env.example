# Environment Configuration
# Copy this file to .env and update with your actual values

# Database Configuration
POSTGRES_URL=postgresql://user:password@localhost/filesync
REDIS_URL=redis://localhost:6379

# Security Configuration
SECRET_KEY=your-secret-key-change-in-production-make-it-very-long-and-random
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Server Configuration
SERVER_HOST=0.0.0.0
SERVER_PORT=8000

# File Storage Configuration
FILES_DIRECTORY=server_files
TEMP_DIRECTORY=temp_files
MAX_FILE_SIZE=104857600  # 100MB in bytes
CHUNK_SIZE=10485760      # 10MB in bytes

# Sync Configuration
SYNC_INTERVAL=30
MAX_RETRY_ATTEMPTS=3
CONFLICT_RESOLUTION_STRATEGY=lww
